    "lint": "prettier --check . && eslint .",
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "sw": "svelte-package -w",
    "tauri": "tauri",
    "tauri:dev": "tauri dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eatham532/tauri-controls-v2.git"
  },
  "author": "eatham532",
